<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:id="@+id/deldet_lay_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/list_icons"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="start|center"
                android:src="@mipmap/ic_medicine_foreground" />
            <TextView
                android:id="@+id/deldet_medname"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Medicine name"
                android:textStyle="bold"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

            <TextView
                android:id="@+id/deldet_status"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Status: "
                android:textColor="@color/colorWhite"  />

            <TextView
                android:id="@+id/deldet_start"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Start: "

                android:textColor="@color/colorWhite"  />

            <LinearLayout
                android:id="@+id/deldet_lay_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deldet_txt_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="Temperature"

                    android:textColor="@color/colorWhite"  />

                <!--  <ImageView
                      android:id="@+id/graph_icons"
                      android:layout_width="56dp"
                      android:layout_height="56dp"
                      android:layout_gravity="right"
                      android:gravity="right"
                      android:src="@mipmap/ic_graph_foreground" /> -->

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/deldet_temp_current"
                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          android:layout_weight="1"
                          android:gravity="center"

                          android:textColor="@color/colorWhite"  />

                      <TextView
                          android:id="@+id/deldet_temp_max"
                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          android:layout_weight="1"
                          android:gravity="center"

                          android:textColor="@color/colorWhite" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/deldet_temp_avg"
                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          android:layout_weight="1"
                          android:gravity="center"

                          android:textColor="@color/colorWhite"  />

                      <TextView
                          android:id="@+id/deldet_temp_min"
                          android:layout_width="match_parent"
                          android:layout_height="30dp"
                          android:layout_weight="1"
                          android:gravity="center"

                          android:textColor="@color/colorWhite"  />
                  </LinearLayout>
              </LinearLayout>

              <LinearLayout
                  android:id="@+id/deldet_lay_humidity"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="30dp"
                  android:layout_marginRight="30dp"
                  android:orientation="vertical">



                  <TextView
                      android:id="@+id/deldet_txt_humid"
                      android:layout_width="wrap_content"
                      android:layout_height="35dp"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:text="Humidity"

                      android:textColor="@color/colorWhite"  />

               <!--   <ImageView
                      android:id="@+id/graph_icons2"
                      android:layout_width="56dp"
                      android:layout_height="56dp"
                      android:layout_gravity="right"
                      android:gravity="right"
                      android:src="@mipmap/ic_graph_foreground" /> -->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deldet_humid_current"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/colorWhite"  />

                    <TextView
                        android:id="@+id/deldet_humid_max"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/colorWhite"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/deldet_humid_avg"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/colorWhite"  />

                    <TextView
                        android:id="@+id/deldet_humid_min"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/colorWhite"  />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/deldet_btn_issue"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:text="Button" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map2"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:context=".MainActivity" />

            <Button
                android:id="@+id/deldet_btn_back"
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/round_button"
                android:text="Back" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackgroundColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/deldetmenu_temp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_weight="1">

            </TextView>

            <TextView
                android:id="@+id/deldetmenu_humid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:layout_weight="1">
            </TextView>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/deldetmenu_movement"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:gravity="center"
                    ></TextView>

                <TextView
                    android:id="@+id/deldetmenu_orientation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:gravity="center"
                    ></TextView>
            </LinearLayout>

            <ImageButton
                android:id="@+id/deldetmenu_btnBack"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:src="@android:drawable/arrow_down_float"
                android:background="@drawable/round_button">

            </ImageButton>
    </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorPrimary"
        app:menu="@menu/nav_menu"></android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>