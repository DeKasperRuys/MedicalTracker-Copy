<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundColor"
    android:textColor="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newmed_txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Add a new medicine"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Medicine Name"
                android:textColor="@color/colorAccent"/>

            <EditText
                android:id="@+id/newmed_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorAccent"
                android:textCursorDrawable="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Temperature"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:textColor="@color/colorAccent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Min"
                    android:textColor="@color/colorAccent"/>

                <EditText
                    android:id="@+id/newmed_edit_minTemp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number|numberSigned"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Max"
                    android:textColor="@color/colorAccent"/>

                <EditText
                    android:id="@+id/newmed_edit_maxTemp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number|numberSigned"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Min"
                    android:textColor="@color/colorAccent"/>

                <EditText
                    android:id="@+id/newmed_edit_minHumid"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Max"
                    android:textColor="@color/colorAccent"/>

                <EditText
                    android:id="@+id/newmed_edit_maxHumid"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/newmed_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add medicine"
                android:background="@drawable/round_button"
                android:textColor="@color/colorWhite"/>

        </LinearLayout>

    </LinearLayout>



</android.support.v4.widget.DrawerLayout>