<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carlv.medicaldeliveryrider">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_rider"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_rider_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity android:name=".Activities.Rider.RiderSelectActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.Medicine.MedicineActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Activities.Rider.NewRiderActivity" />
        <activity android:name=".Activities.Medicine.MedicineDetailActivity" />
        <activity android:name=".Activities.Deliveries.MyDeliveries"/>
        <activity android:name=".Activities.Deliveries.NewDeliveries"/>
        <activity android:name=".Activities.Deliveries.DeliveryHospitalMap"/>
        <activity android:name=".Activities.Deliveries.StartDelivery"/>
        <activity android:name=".Activities.Deliveries.DeliveryDetails"/>
        <activity android:name=".Activities.Hospital.HospitalActivity"/>
        <activity android:name=".Activities.Hospital.HospitalDetailActivity"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>