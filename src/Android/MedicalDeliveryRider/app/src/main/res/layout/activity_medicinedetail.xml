<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorBackgroundColor"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/meddet_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Medicine Name"
        android:gravity="center"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/colorAccent"
            android:text="Temperature"
            android:gravity="center"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Minimum"
                android:gravity="center|right"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/meddet_tempMin"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:layout_marginRight="15dp"
                android:text="Maximum" />

            <TextView
                android:id="@+id/meddet_tempMax"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_weight="1"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView80"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_height="45dp"
            android:text="Humidity"
            android:gravity="center"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorAccent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:text="Minimum"
                android:gravity="center|right"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/meddet_humidMin"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_weight="1"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:text="Maximum"
                android:gravity="center|right"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/meddet_humidMax"
                android:layout_width="match_parent"
                android:textColor="@color/colorAccent"
                android:layout_height="40dp"
                android:layout_weight="1"
                 />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/meddet_btn_back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:text="Back" />
</LinearLayout>