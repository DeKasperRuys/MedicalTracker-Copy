<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundColor"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Are you sure you want to do this delivery?"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"/>

    <TextView
        android:id="@+id/dia_acceptdel_medname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"/>

    <TextView
        android:id="@+id/dia_acceptdel_hospname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="16sp"
        android:textColor="@color/buttonTextColor"/>

    <Button
        android:id="@+id/dia_acceptdel_btnmap"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:text="Hospital on maps" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/dia_acceptdel_btnyes"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_button"
            android:text="Yes" />

        <Button
            android:id="@+id/dia_acceptdel_btnno"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button"
            android:text="No"
            android:layout_marginRight="25dp"/>
    </LinearLayout>
</LinearLayout>