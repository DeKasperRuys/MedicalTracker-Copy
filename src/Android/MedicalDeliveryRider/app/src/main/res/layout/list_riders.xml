<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundColor">

    <LinearLayout
        android:id="@+id/lay_rider"
        android:background="@drawable/round_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_icons"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@mipmap/ic_rider_foreground" />

        <TextView
            android:id="@+id/list_ridername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="12/01/2018"
            android:textColor="#ffffff"/>

    </LinearLayout>


</LinearLayout>